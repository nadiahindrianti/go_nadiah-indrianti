package main

import "fmt"

func main()
func main() {
	var baris, i, j, n int
	n := 1
	fmt.Println("Segitiga Pascal")
	for i := 1; i < n; i++ {
		fmt.Print("")
	}
	for j := 0; j <= baris; j++ {
		fmt.Print(n + "")
		n = n * (baris - j) / (j + 1)
	}
	fmt.Println("")
	if n > 2 {
		pascal(baris+1, n-1)
	} else if n == 2 {
		pascal(baris+1, 1)
	}

}
